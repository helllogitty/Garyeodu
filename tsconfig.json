{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "es2020",       
    "baseUrl": ".",

    "paths": {
      "@/*": [
        "./*"
      ],
      "dto/*": ["./src/dto/*"],
      "entity/*": ["./src/entity/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*"
  ]
}
